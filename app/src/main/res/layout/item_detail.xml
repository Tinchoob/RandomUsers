<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:backgroundTint="@color/colorPrimary">
    

    <TextView
            android:id="@+id/name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Full name :"
            tools:layout_conversion_absoluteHeight="27dp"
            tools:layout_conversion_absoluteWidth="98dp"
            android:layout_marginStart="52dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="44dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/user_name"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginStart="52dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/name_label"/>

    <TextView android:text="Email :"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textStyle="bold"
              android:textSize="24sp"
              android:textColor="@color/black"
              android:id="@+id/email_label"
              android:layout_marginTop="40dp"
              app:layout_constraintTop_toBottomOf="@+id/user_username" android:layout_marginStart="52dp"
              app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:id="@+id/user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="52dp" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/email_label"/>


    <TextView android:text="Username :"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textStyle="bold"
              android:textSize="24sp"
              android:textColor="@color/black"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="52dp"
              android:id="@+id/username_label" android:layout_marginTop="40dp"
              app:layout_constraintTop_toBottomOf="@+id/user_name"/>


    <TextView
            android:id="@+id/user_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginStart="52dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/username_label"/>


</androidx.constraintlayout.widget.ConstraintLayout>